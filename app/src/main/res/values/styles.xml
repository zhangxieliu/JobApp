<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:listDivider">@drawable/divider</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->
        <item name="android:windowBackground">@color/windowBackground</item>
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/colorAccent</item>
        <!--正常状态下的颜色  -->
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <!--覆盖色，按下的颜色  -->
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="CustomTitleTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SearchView">
        <item name="floatingSearch_backgroundColor">@color/colorWhite</item>
        <item name="floatingSearch_viewTextColor">@color/text_normal_color</item>
        <item name="floatingSearch_hintTextColor">@color/text_gray_color</item>
        <item name="floatingSearch_dividerColor">@color/colorGray</item>
        <item name="floatingSearch_clearBtnColor">@color/text_gray_color</item>
        <item name="floatingSearch_leftActionColor">@color/text_gray_color</item>
        <item name="floatingSearch_menuItemIconColor">@color/text_gray_color</item>
        <item name="floatingSearch_suggestionRightIconColor">@color/text_gray_color</item>
        <item name="floatingSearch_actionMenuOverflowColor">@color/text_gray_color</item>
    </style>
    <style name="TextXsGrey">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textColor">@color/text_gray_color</item>
        <item name="android:textSize">@dimen/xs_text_size</item>
    </style>

    <style name="TextGrey" parent="TextXsGrey">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textColor">@color/text_gray_color</item>
        <item name="android:textSize">@dimen/sm_text_size</item>
    </style>
    <style name="TextBlack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textColor">@color/text_normal_color</item>
        <item name="android:textSize">@dimen/lg_text_size</item>
    </style>
    <style name="TagGroup.Beauty_primary" parent="TagGroup">
        <item name="atg_borderColor">@color/colorPrimary</item>
        <item name="atg_textColor">@color/colorPrimary</item>
        <item name="atg_checkedBorderColor">@color/colorPrimary</item>
        <item name="atg_checkedBackgroundColor">@color/colorPrimary</item>
    </style>

    <style name="layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/custom_padding</item>
        <item name="android:padding">@dimen/custom_padding</item>
    </style>

    <style name="edit_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/lg_text_size</item>
        <item name="android:textColorHint">@color/colorTitle</item>
        <item name="android:lines">1</item>
        <item name="android:background">#00000000</item>
        <item name="android:paddingTop">@dimen/custom_xs_size</item>
        <item name="android:paddingBottom">@dimen/custom_xs_size</item>
    </style>
</resources>